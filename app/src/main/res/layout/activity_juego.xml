<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".JuegoOnlineActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatarJ1_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="false"
                app:srcCompat="@android:color/holo_blue_bright" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/celeste">

                <TextView
                    android:id="@+id/nicknameJ1_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jugador 1"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/vitoriasJ1_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/victorias" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tiempoJ1_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="15"
                        android:textColor="@color/rojo"
                        android:textSize="36sp"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/ok_J1_BTN"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:text="@android:string/ok"
                        android:visibility="invisible" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableroLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/avatarJ2_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="false"
                app:srcCompat="@android:color/holo_blue_bright"
                android:background="@drawable/nubes"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/verde">

                <TextView
                    android:id="@+id/nicknameJ2_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jugador 2"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/vitoriasJ2_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/victorias" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tiempoJ2_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@color/rojo"
                        android:textSize="36sp"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/ok_J2_BTN"
                        android:layout_gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:text="@android:string/ok"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/levelTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Nivel 1"
        android:textColor="@android:color/black"
        android:textSize="48dp"
        android:visibility="invisible" />


</FrameLayout>